<div class="wrapper">
<% content_for :title, "All Photos" %>
  <div>
    <h1>All Photos</h1>
    <% if user_signed_in? %>
      <%= link_to "New photo", new_photo_path, class: "btn-new-link" %>
    <% end %>
  </div>

  <div id="photos" >
    <% if @photos.any? %>
      <% @photos.each do |photo| %>

        <div class="actions">
          <div>
            <%= render photo %>
          </div>
          <div>
            <%= link_to "Show", photo, class: "btn-link" %>
          </div>
          <% if user_signed_in? %>
            <div><%= link_to "Edit", edit_photo_path(photo), class: "btn-link" %></div>
            <%= button_to "Delete", photo, method: :delete, class: "btn-destroy", data: { turbo_confirm: "Are you sure?" } %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No photos found.</p>
    <% end %>
  </div>
</div>
